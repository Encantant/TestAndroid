<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row1">
        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="7"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="8"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="9"
            android:textSize="60sp"
            app:cornerRadius="50px" />

        <Button
            android:id="@+id/plus"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:insetLeft="10dp"
            android:text="+"
            android:textSize="60sp"
            app:cornerRadius="50px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row2">
        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="4"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="5"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="6"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/minus"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:insetLeft="10dp"
            android:text="-"
            android:textSize="60sp"
            app:cornerRadius="50px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row3">
        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="1"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="2"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="3"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:insetLeft="10dp"
            android:text="*"
            android:textSize="60sp"
            app:cornerRadius="50px" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row4">
        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="0"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="C"
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/res"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:text="="
            android:textSize="60sp"
            app:cornerRadius="50px" />
        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="250px"
            android:insetLeft="10dp"
            android:text="/"
            android:textSize="60sp"
            app:cornerRadius="50px" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/row5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="180px"
            android:textColor="#FA7843"
            android:textAlignment="textEnd"
            android:id="@+id/output"
            android:text="" />
    </LinearLayout>

</LinearLayout>